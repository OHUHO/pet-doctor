/* components/comment/comment.wxss */
.container {
    display: flex;
    flex-direction: column;
}
.comment-title {
    font-size: 32rpx;
    font-weight: 600;
    padding: 10rpx 0;
    /* color: red; */
}
.comment-content{
    display: flex;
    flex-direction: column;
}

.parent-comment{
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
}
.info{
    display: flex;
    flex-direction: row;
}
.left image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.info .right{
    display: flex;
    flex-direction: column;

}
.username-row {
    /* background-color: red; */
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 30rpx;
}
.username-row .username {
    font-size: 30rpx;
}
.username-row .time {
    font-size: 24rpx;
    color: red;
}


