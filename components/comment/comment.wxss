/* components/comment/comment.wxss */
.container {
    display: flex;
    flex-direction: column;
}
.comment-title {
    font-size: 32rpx;
    font-weight: 600;
    padding: 10rpx 0;
    /* color: red; */
}
.comment-content{
    display: flex;
    flex-direction: column;
    margin-bottom: 50rpx;
}


/* 下面是父级、子级评论的公共样式 */
.parent-comment, .child-comment{
    display: flex;
    flex-direction: row;
    margin-top: 24rpx;
}
.left {
    /* background-color: green; */
}
.left .portrait {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.right{
    display: flex;
    flex-direction: column;
    width: 100%;
}
.right .username-row {
    /* background-color: red; */
    /* background-color: purple; */
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 30rpx;
}
.right .username-row label{
    line-height: 32rpx;
    margin-bottom: 10rpx;
}
.right .username-row .username {
    font-size: 30rpx;
}
.right .username-row .time {
    font-size: 24rpx;
    color: #868585;
    
}
