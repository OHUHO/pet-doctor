/* pages/verifyinglogin/verifyinglogin.wxss */

.verify {
	width: 100vw;
	height: 100vh;
	background-color: #fff;
	border-radius: 0rpx;
}

.verify-main {
	padding-top: 44%;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.title {
	color: #444444;
	font-size: 32rpx;
	font-weight: 500;
}

.desc {
	margin-top: 4rpx;
	color: #888888;
	font-size: 28rpx;
	font-weight: 400;
}

.image {
	width: 400rpx;
	height: 320rpx;
	border-radius: 0rpx;
	margin-top: 48rpx;
}
.btn{
	display: flex;
	align-items: center;
	justify-content: center;
}
.ok {
	width: 400rpx;
	height: 80rpx;
	background-color: #F9A7A7;
	border-radius: 40rpx;
	margin-top: 66rpx;
	color: #FFFFFF;
	font-size: 28rpx;
	font-weight: 400;
	border: none;
}

.cancel {
	width: 400rpx;
	height: 80rpx;
	background-color: #EBECED;
	border-radius: 40rpx;
	color: #888888;
	font-size: 28rpx;
	font-weight: 400;
	margin-top: 24rpx;
	border: none;
}