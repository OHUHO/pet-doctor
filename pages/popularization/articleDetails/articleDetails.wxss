/* pages/popularization/articleDetails/articleDetails.wxss */
.article-container{
    display: fle;
    flex-direction: column;
    margin: 0 20rpx;
    padding-bottom: 100rpx;
}
.title {
    font-size: 36rpx;
    font-weight: 600;
    border-bottom: 2rpx solid whitesmoke;
    padding: 15rpx 0;
}
.userinfo {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 15rpx 0;
}
.portrait {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}
.username {
    font-size: 30rpx;
}
.view-num {
    font-size: 26rpx;
    color: #868585;
    margin-bottom: 10rpx;
}
.content {
    font-size: 32rpx;
}
.time {
    font-size: 26rpx;
    color: #868585;
    margin: 20rpx 0;
}
/* 页脚 */
.footer {
    position: fixed;
    bottom: 0;
    background-color: #fff;
    border-top: 2rpx solid rgb(236, 235, 235);
    height: 90rpx;
    width: 100%;
}
.footer-box {
    /* width: 100%; */
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin: 0 60rpx;
}
.input{
    height: 70rpx;
    /* width: 40%; */
    width: 300rpx;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    font-size: 28rpx;
    color: #868585;
    /* background-color: red; */
    background-color: whitesmoke;
}
.goods-coll{
    width: 300rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.goods-coll icon {
    font-size: 50rpx;
    color: #868585;
    width: 100rpx;
    display: flex;
    flex-direction: row-reverse;
}