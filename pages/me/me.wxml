<!--pages/me/me.wxml-->
<view class="head">
	<image class='background-image' src="/images/background-image.png"></image>
	<view class="userinfo-wrapper">
		<view class="userinfo">
			<block wx:if="{{canIUseOpenData}}">
				<view class="userinfo-avatar" bindtap="">
					<open-data type="userAvatarUrl"></open-data>
				</view>
				<view class="userinfo-introduce">
					<open-data type="userNickName" class="userinfo-nickname"></open-data>
					<text class="userinfo-motto">今天也要好好干饭</text>
				</view>
				
			</block>
			<block wx:elif="{{!hasUserInfo}}">
				<button bindtap="getUserProfile"> 获取头像昵称 </button>
			</block>
			<block wx:else>
				<image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
				<view class="userinfo-introduce">
					<text class="userinfo-nickname">{{userInfo.nickName}}</text>
					<text class="userinfo-motto">今天也要好好干饭</text>
				</view>
			</block>
		</view>
		<view class="otherinfo">
			<view class="col">
				<text class="number">120</text>
				<text>获赞</text>
			</view>
			<view class="col">
				<text class="number">120</text>
				<text>获赞</text>
			</view>
			<view class="col">
				<text class="number">120</text>
				<text>获赞</text>
			</view>
		</view>
	</view>
</view>
<view class="pets">
	<block  wx:for="{{petList}}" wx:for-item="pet">
		<view class="pet">
			<view class="pet-info">
				<image class="pet-avatar" src="{{pet.img}}"></image>
				<view class="pet-introduce">
					<text class="pet-name">{{pet.name}}</text>
					<view class="petinfo">
						<text class="point"></text>
						<text>{{pet.info1}}</text>
					</view>
				</view>	
			</view>
			<text class="pet-edit">编辑宠物</text>
		</view>
	</block>
</view>
<view class="manages">
	<view class="manage">
		<text class="manage-title">我的管理</text>
		<view class="manage-items">
			<view class="manage-item">
				<image class="manage-img" src="/images/my-pet.png"></image>
				<text>我的宠物</text>
			</view>
			<view class="manage-item">
				<image class="manage-img" src="/images/record.png"></image>
				<text>我的问诊</text>
			</view>
			<view class="manage-item">
				<image class="manage-img" src="/images/collection.png"></image>
				<text>我的收藏</text>
			</view>
			<view class="manage-item">
				<image class="manage-img" src="/images/publish.png"></image>
				<text>我的发布</text>
			</view>
		</view>
	</view>

</view>

